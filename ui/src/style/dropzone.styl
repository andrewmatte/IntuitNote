.dropzone
  height calc(100vh - 15rem)
  display flex
  align-items center
  justify-content center

.dropzone > div
  width 22rem !important
  height 12rem !important
  padding 1rem
  margin 2rem
  display flex
  flex-direction column
  align-items center
  transition background-color 0.25s

  &:hover
    background-color #c4e0d0
    cursor pointer

.dropzone
  font-size 1.5rem

.dnd-hint
  font-size 1.5rem
  font-weight bold

.select-hint
  margin-top 0.7rem
  font-size 1.25rem
