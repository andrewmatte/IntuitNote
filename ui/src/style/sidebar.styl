.sidebar
  height 100%
  width 20rem
  background-color #1B631F
  color rgb(202, 230, 225)
  padding 2rem 0
  z-index 1

  .logo
    font-size 1rem
    padding 1rem 0 2rem

.start-message
  font-size 1.5rem
  padding 7.5rem 2rem
  color rgb(30, 98, 48)

  i
    font-size 2rem
    transform scaleX(2) translateX(-10px)

.greeting
  padding-left 1.5rem
  font-size 1.2rem

  .welcome
    color rgb(154, 209, 174)
    font-size 0.95rem

  i
    margin-right 0.75rem

.subject-nav
  margin-top 2rem

.subject-nav-item
  color rgb(202, 230, 225)
  padding 0.3rem 0 0.6rem 1.5rem
  background-color #27732C
  display flex
  align-items center
  transition all 0.25s ease
  cursor pointer

  &.active
    background-color #529434

.subject-nav-item + .subject-nav-item
  border-top 4px solid #1B631F

.subject-nav-item a
  color rgb(202, 230, 225)

.subject-nav-item i
  margin-left auto
  padding-right 1rem

.subject-nav-item:not(.active):hover
  background-color rgb(77, 152, 81)
  cursor pointer

.logout-link
  float right
  color rgb(202, 230, 225)
  border 2px solid
  border-radius 5px
  margin-right 10px
  padding 0.3rem 0.5rem
  font-size 0.8rem
  transition all 0.25s ease

  &:hover
    background-color rgb(202, 230, 225)
    color #1B631F
    border-color rgb(202, 230, 225)
