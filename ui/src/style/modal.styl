.modal-content
  background white
  padding 2rem 3rem 1rem
  border 14px solid rgb(28, 204, 145)
  border-radius 8px
  position relative

  &.auth
    width 26rem
    height 20rem

  &.new-subject
    width 26rem
    height 20rem

  &.new-document
    width 35rem
    height 35rem

  &.confirm
    width 26rem
    height 14rem
    border 14px solid rgb(195, 53, 33)

    .delete
      background-color white
      color rgb(195, 53, 33)

    .delete:hover
      background-color rgb(195, 53, 33)
      color white

  .error
    margin-top 1rem

.modal-title
  font-size 1.5rem
  margin-bottom 1.5rem

.close-btn
  position absolute
  top 10px
  right 10px
  cursor pointer

.close-btn:hover
  color rgb(201, 53, 53)
