@import 'colors'
@import 'hover'
@import 'modal'
@import 'button'
@import 'sidebar'
@import 'dashboard'
@import 'util'
@import 'dropzone'
@import 'table'

html, body, #root, #app, .dashboard
  width 100%
  height 100%
  margin 0
  font-family 'Roboto', sans-serif
  background-color: rgb(236, 235, 235);

form
  margin 0
a
  color black
  text-decoration none
  cursor pointer

*
  box-sizing border-box !important

.header
  height 5rem
  display flex
  align-items center

.header a
  color primary

.logo
  padding 0 5rem
  font-size 2rem
  font-family 'Dosis', sans-serif
  font-size 1.3rem
  font-weight 600
  letter-spacing 1px

.top-nav-item
  font-size: 1.2rem
  font-weight: 500
  padding: 1rem

.menu
  margin-left auto
  padding 0 5rem

.menu a
  font-size: 1.2rem
  font-weight: 300
  padding: 1rem

.form
  display flex
  flex-direction column
  justify-content center
  align-items center

.login.form > * + *
  margin-top 1rem

.login.form *
  width 100%

.login.form input
  padding 0.5rem 0.9rem

.slogan
  font-size 3rem
  font-weight bold
  letter-spacing -3px
  color rgb(67, 110, 90)
  display flex
  flex-direction column
  line-height 0.8

.button-row
  width 100%
  display flex
  justify-content center
  margin-top 1.5rem

.button-row > button:first-child
  margin-right 0.5rem

.button-row > button:last-child
  margin-left 0.5rem

.error
  text-align center
  color rgb(223, 61, 26)

.dashboard
  display flex

.sidebar
  height 100%
  width 20rem
  background-color rgb(48, 71, 58)
  color rgb(202, 230, 225)
  padding 2rem 0

.main-area
  width calc(100vw - 20rem)

.top-row
  display: flex
  flex-direction: row-reverse
  height: 4rem
  align-items: center
  padding-right: 2rem

.top-row a
  padding 1rem
  font-size 1.2rem

.plan-message
  margin-right auto
  padding-left 2rem
  font-weight bold
  font-size 1rem
  color rgb(201, 52, 31)

  i
    margin-right 0.5rem

  .underline
    margin-left 0.3rem

.underline
  padding-bottom 0.4rem
  border-bottom 2px solid rgb(201, 52, 31)
