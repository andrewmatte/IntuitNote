.subject-area
  height calc(100vh - 4rem)
  padding 2rem

.subject-title
  font-size 2rem

.title-row
  display flex

  .delete-btn
    width 10rem
    margin 1rem
    margin-left auto
    color rgb(189, 46, 14)

    &:hover
      background-color rgb(189, 46, 14)
      color white
      border-color rgb(189, 46, 14)

.subject-data
  display flex

  .dropzone,
  .paste-text-info
    flex 1

.paste-text-info
  display flex
  align-items center
  justify-content center
  font-size 2rem
